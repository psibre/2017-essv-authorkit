\def\@maketitle
{
  \newpage
  \null
  {\centering
    {\large\bfseries\scshape \@title \par}
    \vspace*{24pt}
    {\normalsize\itshape
      \lineskip .5em
      \begin{tabular}[t]{c}
        \@author
      \end{tabular}
      \par
      }
    \vskip .5em
    {\normalsize\itshape
      \begin{tabular}[t]{c}
        \@affiliation
      \end{tabular}
      \par
      \ifx \@empty \@email
      \else
      \begin{tabular}[t]{c}
        \@email
      \end{tabular}
      \par
      \fi
      }% additional empty line at the end of the title block
    \vspace*{12pt}}
  }

