\newlength{\@ctmp}
\newlength{\@figindent}
\setlength{\@figindent}{1pc}

\long\def\@makecaption#1#2{
   \vskip\abovecaptionskip
   \setbox\@tempboxa\hbox{\hspace{0.75cm} {\footnotesize{\bfseries
#1}~-~#2}}
   \setlength{\@ctmp}{\hsize}
   \addtolength{\@ctmp}{-0.75cm}\addtolength{\@ctmp}{-\@figindent}
   % IF longer than one indented paragraph line
   \ifdim \wd\@tempboxa >\@ctmp
      % THEN set as an indented paragraph
      \begin{list}{}{\leftmargin0.75cm \rightmargin\leftmargin}
         \item[] {\footnotesize{\bfseries #1}~-~#2}\par
      \end{list}
   \else
      % ELSE center
      \hbox to\hsize{\box\@tempboxa\hfil}
   \fi}

